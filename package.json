{
  "name": "acdl_helper",
  "version": "0.9.0",
  "description": "Helper Library for the Adobe Client Data Layer",
  "private": true,
  "type": "module",
  "directories": {
    "server": "server",
    "src": "src"
  },
  "scripts": {
    "serve:dev": "npm-run-all --parallel watch:server watch:build:dev",
    "serve:prod": "npm-run-all --parallel watch:server watch:build:prod ",
    "watch:build:dev": "webpack --mode=development --watch",
    "watch:build:prod": "webpack --mode=production --watch",
    "watch:server": "nodemon server/app.js --watch 'server/**/*' -e js,ejs",
    "build:prod": "webpack --mode=production",
    "build:clientlibs": "npm-run-all build:prod 'clientlib --verbose'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "aem-clientlib-generator": "^1.8.0",
    "ejs": "^3.1.8",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.2",
    "ignore-loader": "^0.1.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
